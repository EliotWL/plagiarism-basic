<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">

    <title>Plagiarism Report</title>
    <meta name="description" content="Plagiarism Report">
    <meta name="author" content="Sriram Sami (plagiarism-basic)">

    <link rel="stylesheet" href="styles.css">

</head>

<body>
    <h1 style="text-align: center"> Plagiarism Report </h1>
    <!-- <script src="js/scripts.js"></script> -->
    {{#each results}}
    <hr>
    <h2 style="text-align: center"> Plagiarism report between {{#if this.trusted_owner1}} trusted {{else}} untrusted {{/if}} ID {{this.owner_id1}} and untrusted ID {{this.owner_id2}} </h2>


    <h3 style="text-align: center"> Test metric: {{#if this.equal_fragments}} Equality {{else}} Levenshtein {{/if}} </h3>

    <table border="1px solid black" align="center">
        <thead>
            <tr>
                {{#if this.equal_fragments}}
                  <td> <strong> ID {{this.owner_id1}} </strong> and <strong> ID {{this.owner_id2}} </strong> </td>

                {{else}}
                <td> <strong> ID {{this.owner_id1}} </strong> </td>
                <td> <strong> ID {{this.owner_id2}} </strong> </td>

                {{/if}}
            </tr>
        </thead>
        <tbody>

            {{#if this.equal_fragments}}
            {{#each this.matching_fragments}}
            <tr> <td> {{this.0}} </td> </tr>
            {{/each}}

            {{else}}
            {{#each this.matching_fragments}}
            <tr>
                <td> {{this.0}} </td>
                <td> {{this.1}} </td>
            <tr>
            {{/each}}

            {{/if}}
}
        </tbody>
    </table>
    {{/each}}
</body>

</html>